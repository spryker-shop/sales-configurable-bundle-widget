{
  "name": "spryker-shop/sales-configurable-bundle-widget",
  "type": "library",
  "description": "SalesConfigurableBundleWidget module",
  "license": "proprietary",
  "require": {
    "php": ">=7.2",
    "spryker-shop/customer-reorder-widget-extension": "^1.0.0",
    "spryker-shop/shop-ui": "^1.31.0",
    "spryker/kernel": "^3.33.0",
    "spryker/messenger": "^3.0.0",
    "spryker/sales-configurable-bundle": "^1.0.0"
  },
  "require-dev": {
    "spryker-shop/configurable-bundle-note-widget": "*",
    "spryker/code-sniffer": "*",
    "spryker/testify": "*"
  },
  "suggest": {
    "spryker-shop/configurable-bundle-note-widget": "If you want to use configurable bundle note feature."
  },
  "autoload": {
    "psr-4": {
      "SprykerShop\\": "src/SprykerShop/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "cs-check": "phpcs --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml -p -s src/",
    "cs-fix": "phpcbf --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml -p -s src/"
  }
}
