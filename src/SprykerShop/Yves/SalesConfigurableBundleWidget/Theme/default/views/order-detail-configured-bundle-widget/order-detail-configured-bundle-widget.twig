{# @deprecated Use view 'order-items-configured-bundle-widget' instead. #}
{% extends template('widget') %}

{% define data = {
    items: _widget.items,
    salesOrderConfiguredBundles: _widget.salesOrderConfiguredBundles,
    currencyIsoCode: _widget.order.currencyIsoCode,
} %}

{% block body %}
    {% for bundle in data.salesOrderConfiguredBundles %}
        {% block bundleItem %}
            {% include molecule('ordered-configured-bundle', 'SalesConfigurableBundleWidget') with {
                data: {
                    bundle: bundle,
                    items: data.items,
                    currencyIsoCode: data.currencyIsoCode,
                },
            } only %}
        {% endblock %}
    {% endfor %}
{% endblock %}
